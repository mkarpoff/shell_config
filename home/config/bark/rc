#! /usr/bin/env sh

alias bark=/apollo/env/BarkCLI/bin/bark

bark -SetConfig -endpoint=https://timber-corp-pdx.pdx.proxy.amazon.com

#bark -cf=$HOME/.config/bark/<bark_double_fantasy> -ListLogGroups

function setup_bark {
	source ~/.config/bark/setup_bark
}
# Bark logs #
function artRecruitingWebsiteLogs
{
	if [ -z $3 ]; then
		stage=Prod
	else
		stage=$3
	fi
    bark -cf=$HOME/.config/bark/bark_art -FetchLogs -LogGroupName=AmazonRecruitingTechnologies/Recruiting/Hire/$stage/rails.log -p $HOME/bark/ArtRecruitingWebsite -StartTime=$1 -EndTime=$2
}

function artDocLogs
{
	if [ -z $3 ]; then
		stage=Prod
	else
		stage=$3
	fi
	bark -cf=/home/$USER/.config/bark/bark_sync -FetchLogs -LogGroupName=AmazonRecruitingTechnologies/DocumentGeneration/$stage/ArtDocumentGeneration.log -p /home/$USER/bark/artdoc -StartTime=$1 -EndTime=$2
}

function hireWebsiteLogs
{
	if [ -z $3 ]; then
		stage=Prod
	else
		stage=$3
	fi
    bark -cf=$HOME/.config/bark/bark_art -FetchLogs -LogGroupName=HireWebsite/$stage/rails.log -p $HOME/bark/HireWebsite -StartTime=$1 -EndTime=$2
}

