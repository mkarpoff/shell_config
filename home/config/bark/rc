# JODS Logs
function jobOfferDocServiceLogs
{

	if [ -z $3 ]; then
		stage=Prod
	else
		stage=$3
	fi
	/apollo/env/BarkCLI/bin/bark -cf=/home/$USER/.config/bark/bark_art -FetchLogs -LogGroupName=AmazonRecruitingTechnologies/JobOfferDocService/$stage/application.log -p /home/$USER/bark/jodslogs -StartTime=$1 -EndTime=$2
}



